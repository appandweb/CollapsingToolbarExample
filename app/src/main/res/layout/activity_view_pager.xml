<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/view_pager_lyt_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <View
        android:id="@+id/view_pager_view"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"/>
    <ImageButton
        android:id="@+id/view_pager_ibtn_back"
        android:src="@drawable/back_dark"
        android:background="@null"
        android:padding="10dp"
        android:layout_alignTop="@+id/view_pager_view"
        android:layout_alignBottom="@+id/view_pager_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageButton
        android:id="@+id/view_pager_ibtn_menu"
        android:src="@drawable/menu_dark"
        android:background="@null"
        android:padding="10dp"
        android:layout_alignTop="@+id/view_pager_view"
        android:layout_alignBottom="@+id/view_pager_view"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/view_pager_tv_title"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/view_pager_view"
        android:layout_alignBottom="@+id/view_pager_view"
        android:text="@string/view_pager_title"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/view_pager_view_separator"
        android:layout_below="@+id/view_pager_view"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="0.5dp"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/view_pager_tablayout"
        android:layout_below="@+id/view_pager_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_vp"
        android:layout_below="@+id/view_pager_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
    </RelativeLayout>
</FrameLayout>